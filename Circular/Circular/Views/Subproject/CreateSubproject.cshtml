@model Circular.Models.ViewModels.CreateSubprojectModel

@{
    
    ViewData["Title"] = "Create Subproject";
}

<style>
    .create-project-info {
        width: 250px;
        height: 250px;
        position: absolute;
        top: 50%;
        left: 50%;
        margin: -125px 0 0 -125px;
    }
</style>

<div class="create-project-info" style="text-align: center;">
    <form method="post" asp-controller="Subproject" asp-action="CreateSubproject">
        <h3>Add subproject</h3>
        <div asp-validation-summary="ModelOnly"></div>
   
        <div>
            <label style="margin-top:5%" asp-for="GithubLink">Сopy the link to the github project and paste it below</label><br />
            <input asp-for="GithubLink" />
        </div>

        <div>
            <input style="border:0px; background-color: rgba(240, 141, 11, 0.7); color:rgb(0, 0, 0); width:200px; border-radius: 10px; margin-top: 3%" class="btn btn-primary" type="submit" value="Add subproject" />
            <input type="hidden" asp-for="ProjectId" value="@Model.ProjectId" width="0" height="0"/>       
        </div>
    </form>
</div>