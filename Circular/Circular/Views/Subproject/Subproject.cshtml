@using Circular.Models.JsonModels;

@model SubprojectResponse

@{
    ViewData["Title"] = "Subproject";
}

<style>
    .main {
        display: flex;
        position: relative;
        margin-top: 8%;
        margin-left: 7.5%;
        font-family: Geneva, Arial, Helvetica, sans-serif;
        text-align: center;
    }

    .main-edit {
        display: flex;
        position: relative;
        margin-top: 10%;
        margin-left: 15%;
    }


    .labels {
        font-size: 20px;
    }

    .edit-info {
        padding-right: 37.5%;
        padding-left: 10%;
    }

    .avatar {
        width: 80%;
        height: 90%;
    }

    .project-info {
        margin-top: 6%;
    }


    .email-pos {
        padding-top: 20%;
        padding-bottom: 2rem;
    }

    .btn-primary {
        margin-bottom: 1rem;
        margin-left: 27%;
    }

    .btn-edit {
        margin-bottom: 1rem;
    }

    .delete-acc {
        padding-left: 60rem;
        padding-right: 15rem;
    }

    .change-btns {
        margin-top: 1rem;
        margin-left: 47%;
    }

    .list-group {
        max-height: 300px;
        min-width: 200px;
        margin-bottom: 10px;
        overflow: scroll;
        -webkit-overflow-scrolling: touch;
    }

    .panel-primary {
        margin-left: 25%;
        text-align:center;
    }

    .table-commits {
        min-width: 300px;
        
    }
    
    .link-info {
        margin-right:25%;
        text-align:center;  
    }

    table {
        font-family: "Lucida Sans Unicode", "Lucida Grande", Sans-Serif;
        font-size: 14px;
        border-radius: 10px;
        border-spacing: 0;
        text-align: center;
        min-width: 300px;
    }

    th {
        background: rgba(240, 141, 11, 0.7);
        color: white;
        text-shadow: 0 1px 1px #2D2020;
        padding: 10px 20px;
    }

    th, td {
        border-style: solid;
        border-width: 0 1px 1px 0;
        border-color: white;
    }

        th:first-child, td:first-child {
            text-align: left;
        }

        th:first-child {
            border-top-left-radius: 10px;
        }

        th:last-child {
            border-top-right-radius: 10px;
            border-right: none;
        }

    td {
        padding: 10px 20px;
        background: #D3D3D3;
    }

    tr:last-child td:first-child {
        border-radius: 0 0 0 10px;
    }

    tr:last-child td:last-child {
        border-radius: 0 0 10px 0;
    }

    tr td:last-child {
        border-right: none;
    }
</style>

<div class="link-info">
    <h4 style="margin-left:15%; margin-top:3%"><a href="@Model.url">Go to github</a></h4>
    <!--<label class="labels" style="margin-left: 27%;" asp-for="Description">Description</label><br />-->
</div>

<div class="main">
    <div class="project-info">
        <h4 style="margin-left: 15%; margin-top: 5%"><a>@Model.name</a></h4><br />
        <a style="border:0px; background-color: rgba(240, 141, 11, 0.7); color:rgb(0, 0, 0); width:200px; border-radius: 10px" class="btn btn-primary" asp-controller="Subproject" asp-action="Subproject">Synchronization</a>
        <!--<label class="labels" style="margin-left: 27%;" asp-for="DateTime">DateTime</label><br />-->
    </div>
    <div class="panel-primary" id="result_panel">
        <h4>List of commits</h4>
        <table class="table-commits">
            <tr class="">
                <th>Owner</th>
                <th>Description</th>
                <th>Date</th>

            </tr>
            @foreach (var element in ViewBag.Commits)
            {
        <tr>
            <td><a asp-controller="Subproject" asp-action="OwnersCommits" asp-route-id="@Model.id" asp-route-ownerName="@element.commit.author.name">@element.commit.author.name</a></td>
            <td>@element.commit.message</td>
            <td>@element.commit.author.date</td>
        </tr>
            }
        </table>
    </div>

</div>

<div style="text-align: center; margin-right: 25%; margin-top: 10%">
    <!--Має повертати на профіль-->
    <a style="border:0px; background-color: rgba(240, 141, 11, 0.7); color:rgb(0, 0, 0); width:200px; border-radius: 10px" class="btn btn-primary" asp-controller="Project" asp-action="Project">Back</a>
</div>