@using Circular.Controllers;

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .main {
        display: flex;
        position: relative;
        margin-top: 10%;
        margin-left: 7.5%;
    }

    .labels {
        font-size: 20px;
    }

    .edit-info {
        padding-right: 37.5%;
        padding-left: 10%;
    }

    .avatar {
        width: 80%;
        height: 90%;
    }

    .personal-info {
        margin-left: 10%;
        margin-top: 5%;
    }


    .email-pos {
        padding-top: 10%;
        padding-bottom: 2rem;
    }

    .btn-primary {
        margin-top: 10%;
    }

    .btn-edit {
        margin-bottom: 1rem;
    }

    .delete-acc {
        padding-left: 60rem;
        padding-right: 15rem;
    }



    .about-us {
        margin-left: 20%;
        min-width: 20%;
        max-width: 30%;
    }
    .log-or-reg {
        position: absolute; 
        width: 400px; 
        height: 300px; 
        left: 50%; 
        top: 50%; 
        margin-left: -211px; 
        margin-top: -150px; 
        
        overflow: auto;
    }
</style>

@if (User.Identity.IsAuthenticated)
{

    <div class="main">

        <div class="personal-info">
            <a style="border:0px; background-color: rgba(240, 141, 11, 0.7); color:rgb(0, 0, 0); width:200px; border-radius: 10px" type="button" class="btn btn-primary" asp-controller="Project" asp-action="CreateProject">Start new project</a><br>
            <a style="border:0px; background-color: rgba(240, 141, 11, 0.7); color:rgb(0, 0, 0); width:200px; border-radius: 10px;" type="button" class="btn btn-primary" asp-controller="Profile" asp-action="Profile">My Profile</a>
        </div>
        <div class="about-us">
            <h3 style="margin-left: 25%;">About us</h3>
            <p>Our project will simplify viewing your Github projects thanks to a simple and minimalist interface. It will also save you time as it is a web application, nothing extra needs to be installed. Access to all projects will be in one place, which will allow you to quickly switch between them, view committees and the progress of the project. Committees include a description, author, date, number of comments and a direct link to the committee page in GitHub</p>

        </div>

    </div>

}
else
{
<div align="center" class="log-or-reg">
    <a style="border:0px; background-color: rgba(240, 141, 11, 0.7); color:rgb(0, 0, 0); width:200px; border-radius: 10px" class="btn btn-primary" asp-controller="Account" asp-action="Login">Log in</a><br>
    <a style="border:0px; background-color: rgba(240, 141, 11, 0.7); color:rgb(0, 0, 0); width:200px; border-radius: 10px" class="btn btn-primary" asp-controller="Account" asp-action="Register">Registration</a>
</div>
}
