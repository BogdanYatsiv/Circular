@model Circular.Models.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Зміна пароля";
}
<style>
    .change-pass {
        position: absolute;
        width: 400px;
        height: 300px;
        left: 50%;
        top: 50%;
        margin-left: -211px;
        margin-top: -150px;
        overflow: auto;
    }
</style>

<h2 style="text-align: center;  ">Зміна пароля для користувача @User.Identity.Name</h2>
<form asp-action="ChangePassword" asp-controller="Profile">
    <div class="change-pass">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div class="form-group">
            <label asp-for="OldPassword" class="control-label">Старий пароль</label>
            <input type="text" asp-for="OldPassword" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">Новий пароль</label>
            <input type="text" asp-for="NewPassword" class="form-control" />
        </div>
        <div class="form-group">
            <input style="border:0px; background-color: rgba(240, 141, 11, 0.7); color:rgb(0, 0, 0); width:200px; border-radius: 10px; " type="submit" value="Зберегти" class="btn btn-default" />
        </div>
    </div>
</form>